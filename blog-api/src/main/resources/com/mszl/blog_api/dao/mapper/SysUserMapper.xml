<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mszl.blog_api.dao.mapper.SysUserMapper">
    <select id="selectById" resultType="com.mszl.blog_api.dao.pojo.SysUser" parameterType="java.lang.Long">
        select id,account,admin,avatar,create_date,deleted,email,last_login,mobile_phone_number,nickname,status from ms_sys_user where id = #{authorId}
    </select>
</mapper>